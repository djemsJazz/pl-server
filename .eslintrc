{
  "env": {
      "node": true,
      "commonjs": true,
      "es2015": true
  },
  "extends": "airbnb-base",
  "ignorePatterns": [
      "/node_modules/*",
      "/public/*",
      "/views/*"
  ],
  "parserOptions": {
      "ecmaVersion": 12
  },
  "rules": {
      "no-underscore-dangle": 0,
      "max-len": [
          "error",
          {
              "code": 190
          }
      ]
  }
}
